{
    "name": "root",
    "version": "0.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/master-co/css.git"
    },
    "scripts": {
        "build:iife": "esbuild src/index.browser.ts --bundle --outfile=dist/index.browser.js --format=iife --target=es2019",
        "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/index.cjs --format=cjs --platform=node --target=es2019",
        "build:esm": "esbuild src/index.ts --bundle --outfile=dist/index.mjs --format=esm --platform=node --target=es2019",
        "build:css": "esbuild src/index.css --bundle --outfile=dist/index.css",
        "dev:iife": "npm run build:iife -- --watch",
        "dev:cjs": "npm run build:cjs -- --watch",
        "dev:esm": "npm run build:esm -- --watch",
        "prod": "rm -rf dist && npm run build:cjs -- --minify --sourcemap && npm run build:iife -- --minify --sourcemap && npm run build:esm -- --minify --sourcemap && tsc --emitDeclarationOnly",
        "test": "jest",
        "lint": "eslint ./src"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@changesets/cli": "^2.25.0",
        "@swc/core": "^1.3.9",
        "@swc/jest": "^0.2.23",
        "@types/jest": "^29.2.0",
        "@types/node": "^18.11.0",
        "@typescript-eslint/eslint-plugin": "^5.40.1",
        "@typescript-eslint/parser": "^5.40.1",
        "dedent": "^0.7.0",
        "esbuild": "^0.15.10",
        "eslint": "^8.25.0",
        "jest": "^29.2.2",
        "lerna": "^6.0.3",
        "typescript": "^4.8.4"
    }
}
