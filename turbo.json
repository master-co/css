{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "dev": {
            "outputs": [
                "dist/**"
            ]
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "build:ci": {
            "dependsOn": [
                "test",
                "lint",
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "test": {
            "outputs": [],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts"
            ]
        },
        "lint": {
            "outputs": []
        }
    }
}